#form - create labels & inputs for params
# hit submit = posts
<h1>MusicBlogs#new</h1>
<p>Find me in app/views/music_blogs/new.html.erb</p>

<%= form_for @music_blog do |f| %>
  <%= label_tag(:title, 'Title') %>
  <%= f.text_field :title %> <br>

  <%= label_tag(:content, 'Content') %>
  <%= f.text_field :content %> <br>

  <%= label_tag(:rating, 'Rating') %>
  <%= f.text_field :rating %> <br> <br>

  <%= f.submit "CREATE! ME" %>
<% end %>

  <% if @music_blog.errors.any? %>
    <h2>The following errors prevented the article from getting created</h2>
    <ul>
    <% @music_blog.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
    </ul>
<% end %>
